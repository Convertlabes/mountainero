{%- liquid
    assign  desktop_padding_top = section.settings.desktop_padding_top
    assign  desktop_padding_bottom = section.settings.desktop_padding_bottom
    assign  mobile_padding_top = section.settings.mobile_padding_top
    assign  mobile_padding_bottom = section.settings.mobile_padding_bottom
    assign background = section.settings.background
-%}

{{ 'ak-multi-text-with-image.css' | asset_url | stylesheet_tag }}

<style>
    
    #shopify-section-{{ section.id }} .our-logo-container {
        padding-top: {{ desktop_padding_top }}px;
        padding-bottom: {{ desktop_padding_bottom }}px;
        background : {{ background }};
    }


    #shopify-section-{{ section.id }} .olc-wrapper {
      border-radius: 20px;
      border: 1px solid var(--Grey-light, rgba(0,0,0,.1));
      padding: 20px;
    }

    @media (max-width : 768px) {
        #shopify-section-{{ section.id }} .our-logo-container {
            padding-top: {{ mobile_padding_top }}px;
            padding-bottom: {{ mobile_padding_bottom }}px;
        }
    }

</style>



{% comment %} begin our misssion code {% endcomment %}
<div class='our-logo-container page-width'>
  <div class="olc-wrapper">
    {%- if section.settings.heading != blank -%}
      <div class='brand-heading'>
        <div class='heading'>{{ section.settings.heading }}</div>
      </div>
    {%- endif -%}

    <div class='brand-content {% if section.settings.brand-list-display-mode == "slider" %} swiper brand-swiper-slider-{{ section.id }} {% endif %}'>
      <ul class='brands-lists {% if section.settings.brand-image-show-mode != blank %} {{ section.settings.brand-image-show-mode }} {% endif %} {% if section.settings.brand-list-display-mode == "slider" %} swiper-wrapper {% endif %}'>
        {% for block in section.blocks %}
          {%- if block.type == "brands-list" -%}
              <li class='list-item'>
                  <img src="{{ block.settings.brand-image  |  image_url: width: 1200 }}" width="" height="" alt="">
              </li>
          {%- endif -%}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% comment %} end our misssion code {% endcomment %}



{% schema %}
  {
    "name": "Logo List",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
            "type": "range",
            "id" : "desktop_padding_top",
            "min": 0,
            "max": 500,
            "step" : 5,
            "default" : 80,
            "label": "Padding Top(desktop)"
        },
        {
            "type": "range",
            "id" : "mobile_padding_top",
            "min": 0,
            "max": 500,
            "step" : 5,
            "default" : 40,
            "label": "Padding Top(mobile)"
        },
        {
            "type": "range",
            "id" : "desktop_padding_bottom",
            "min": 0,
            "max": 500,
            "step" : 5,
            "default" : 100,
            "label": "Padding Bottom(desktop)"
        },
        {
            "type": "range",
            "id" : "mobile_padding_bottom",
            "min": 0,
            "max": 500,
            "step" : 5,
            "default" : 50,
            "label": "Padding Bottom(mobile)"
        }
    ],
    "blocks": [
      {
        "type": "brands-list",
        "name": "Logo List",
        "settings": [
          {
            "type": "image_picker",
            "id": "brand-image",
            "label": "Brand Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo List",
        "settings": {}
      }
    ]
  }
{% endschema %}