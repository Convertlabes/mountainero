        },
        {
            "type": "range",
            "id" : "mobile_padding_top",
            "min": 0,
            "max": 500,
            "step" : 5,
            "default" : 40,
            "label": "Padding Top(mobile)"
        },
        {
            "type": "range",
            "id" : "desktop_padding_bottom",
            "min": 0,
            "max": 500,
            "step" : 5,
            "default" : 100,
            "label": "Padding Bottom(desktop)"
        },
        {
            "type": "range",
            "id" : "mobile_padding_bottom",
            "min": 0,
            "max": 500,
            "step" : 5,
            "default" : 50,
            "label": "Padding Bottom(mobile)"
        }
    ],
    "presets": [
      {
        "name": "AB hero banner",
        "settings": {
        }
      }
    ]
  }
{% endschema %}